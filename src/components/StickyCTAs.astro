---
/**
 * StickyCTAs.astro
 * - "Get Quote" scrolls to the #lead-form
 * - "WhatsApp" is wired by the global harness using data attributes,
 *   and will prefill a message from the lead form + UTM context.
 */
const WA = (import.meta.env.PUBLIC_WHATSAPP_NUMBER || '').replace(/\D/g, '');
---

<div class="fixed bottom-4 inset-x-0 px-4 md:hidden">
  <div class="mx-auto max-w-md grid grid-cols-2 gap-3">
    <a href="#lead-form" class="btn-primary">Get Quote</a>

    <!-- No hardcoded href; global harness builds wa.me link on click -->
    <a
      href="#"
      rel="nofollow noopener"
      class="inline-flex items-center justify-center rounded-xl border border-primary font-semibold bg-white"
      data-wa
      data-wa-number={WA || undefined}
    >
      WhatsApp
    </a>
  </div>
</div>
