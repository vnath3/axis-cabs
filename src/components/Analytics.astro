---
const GA4 = import.meta.env.PUBLIC_GA4_ID || '';
---

{GA4 && (
  <>
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA4}`}></script>
    <script is:inline>
      const GA_ID = "{GA4}";
      if (GA_ID) {
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', GA_ID);
      }
    </script>
  </>
)}
