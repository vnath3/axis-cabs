---
interface FAQ { q: string; a: string }
interface Props { items: FAQ[]; useHtml?: boolean }
const { items = [], useHtml = false } = Astro.props as Props;
---
<div class="mt-10 space-y-3">
  {items.map((f, i) => (
    <details class="card" data-faq-id={i}>
      <summary class="cursor-pointer font-semibold">{f.q}</summary>
      {useHtml ? (
        <div class="mt-2 md-content text-sm opacity-90" set:html={f.a} />
      ) : (
        <p class="mt-2 text-sm opacity-80">{f.a}</p>
      )}
    </details>
  ))}
</div>
